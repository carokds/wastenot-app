<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".fragments.RecipesFragment">

    <ImageButton
        android:id="@+id/btn_home_recipesfragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/fui_transparent"
        android:src="@drawable/ic_home"
        app:cardCornerRadius="10dp"
        app:cardElevation="9dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/orange" />

    <TextView
        android:id="@+id/tv_title_recipes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        tools:text="Recipes with"/>

    <HorizontalScrollView
        android:id="@+id/horizontal_scroll"
        android:layout_width="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/tv_title_recipes">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btn_diet_none"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="24dp"
                android:background="@drawable/button_shape"
                android:padding="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/diet_none"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/grey_text" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/none"
                android:textColor="@color/grey_text"
                app:layout_constraintEnd_toEndOf="@+id/btn_diet_none"
                app:layout_constraintStart_toStartOf="@+id/btn_diet_none"
                app:layout_constraintTop_toBottomOf="@+id/btn_diet_none" />


            <ImageButton
                android:id="@+id/btn_diet_vegetarian"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:background="@drawable/button_shape"
                android:padding="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/diet_vegetarian"
                app:layout_constraintStart_toEndOf="@+id/btn_diet_none"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/grey_text" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/vegetarian"
                android:textColor="@color/grey_text"
                app:layout_constraintEnd_toEndOf="@id/btn_diet_vegetarian"
                app:layout_constraintStart_toStartOf="@+id/btn_diet_vegetarian"
                app:layout_constraintTop_toBottomOf="@+id/btn_diet_vegetarian" />


            <ImageButton
                android:id="@+id/btn_diet_vegan"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:background="@drawable/button_shape"
                android:padding="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/diet_vegan"
                app:layout_constraintStart_toEndOf="@+id/btn_diet_vegetarian"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/grey_text" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/vegan"
                android:textColor="@color/grey_text"
                app:layout_constraintEnd_toEndOf="@id/btn_diet_vegan"
                app:layout_constraintStart_toStartOf="@id/btn_diet_vegan"
                app:layout_constraintTop_toBottomOf="@+id/btn_diet_vegan" />


            <ImageButton
                android:id="@+id/btn_diet_keto"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:background="@drawable/button_shape"
                android:padding="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/diet_keto"
                app:layout_constraintStart_toEndOf="@id/btn_diet_vegan"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/grey_text" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/keto"
                android:textColor="@color/grey_text"
                app:layout_constraintEnd_toEndOf="@id/btn_diet_keto"
                app:layout_constraintStart_toStartOf="@id/btn_diet_keto"
                app:layout_constraintTop_toBottomOf="@id/btn_diet_keto" />

            <ImageButton
                android:id="@+id/btn_diet_pescatarian"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:background="@drawable/button_shape"
                android:padding="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/diet_pescatarian"
                app:layout_constraintStart_toEndOf="@id/btn_diet_keto"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/grey_text" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/pescatarian"
                android:textColor="@color/grey_text"
                app:layout_constraintEnd_toEndOf="@id/btn_diet_pescatarian"
                app:layout_constraintStart_toStartOf="@id/btn_diet_pescatarian"
                app:layout_constraintTop_toBottomOf="@id/btn_diet_pescatarian" />


            <ImageButton
                android:id="@+id/btn_diet_gluten"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:background="@drawable/button_shape"
                android:padding="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/diet_gluten"
                app:layout_constraintStart_toEndOf="@id/btn_diet_pescatarian"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/grey_text" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/celiac"
                android:textColor="@color/grey_text"
                app:layout_constraintEnd_toEndOf="@id/btn_diet_gluten"
                app:layout_constraintStart_toStartOf="@id/btn_diet_gluten"
                app:layout_constraintTop_toBottomOf="@id/btn_diet_gluten" />


            <ImageButton
                android:id="@+id/btn_diet_fodmap"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:background="@drawable/button_shape"
                android:padding="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/diet_fodmap"
                app:layout_constraintStart_toEndOf="@id/btn_diet_gluten"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/grey_text" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="LowFodmap"
                android:textColor="@color/grey_text"
                app:layout_constraintEnd_toEndOf="@id/btn_diet_fodmap"
                app:layout_constraintStart_toStartOf="@id/btn_diet_fodmap"
                app:layout_constraintTop_toBottomOf="@id/btn_diet_fodmap" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </HorizontalScrollView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/horizontal_scroll"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp"
        tools:listitem="@layout/recipe_item" />


</androidx.constraintlayout.widget.ConstraintLayout>